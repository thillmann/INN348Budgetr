<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/ActionBarTheme</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle</item>
        <item name="android:actionBarTabBarStyle">@style/ActionBarTabBarStyle</item>
        <item name="android:actionBarTabTextStyle">@style/ActionBarTextStyle</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionOverflowButtonStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_navigate_before_white_24dp</item>
        <item name="android:editTextBackground">@drawable/edit_text</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="android:button">@drawable/button</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="android:actionBarDivider">@color/transparent</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="android:actionBarItemBackground">@drawable/action_bar_item_background</item>
    </style>

    <style name="ActionBarTheme" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:icon">@drawable/ic_action_bar</item>
        <item name="android:background">@color/theme_primary</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleTextStyle</item>
    </style>

    <style name="ActionBarTitleTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ActionBarTabStyle" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_bar_background</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="ActionBarTabBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.TabBar">
        <item name="android:background">@color/theme_primary</item>
        <item name="android:divider">@color/transparent</item>
    </style>

    <style name="ActionBarTextStyle" parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/tab_bar_text</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ActionOverflowButtonStyle" parent="@android:style/Theme.Holo">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>

    <style name="ListViewStyle" parent="@android:style/Widget.Holo.ListView">
        <item name="android:divider">@color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="PrimaryTextStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/body_text_1</item>
    </style>

    <style name="SecondaryTextStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/body_text_2</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/Widget.Holo.EditText">
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:textColor">@color/body_text_1</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>

    <style name="LabelStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/body_text_3</item>
    </style>

    <style name="FloatingLabel">
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:editTextStyle">@style/FloatingLabel.EditText</item>
    </style>

    <style name="FloatingLabel.EditText" parent="EditTextStyle">
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/Widget.Holo.Button">
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="RaisedButtonStyle" parent="ButtonStyle">
        <item name="android:background">@drawable/raised_button</item>
        <item name="android:paddingTop">11dp</item>
        <item name="android:paddingBottom">11dp</item>
        <item name="android:paddingLeft">19dp</item>
        <item name="android:paddingRight">19dp</item>
    </style>

    <style name="RaisedButtonStyle.Accent" parent="RaisedButtonStyle">
        <item name="android:textColor">@color/body_text_1_inverse</item>
        <item name="android:background">@drawable/raised_button_accent</item>
    </style>

</resources>
